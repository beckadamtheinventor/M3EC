{
	"modloader": "forge",
	"minecraftVersion": "1.19",
	"javaVersion": "17.",
	"firstActions": [
		{
			"if": [
				"^OR",
				"?mod.registry.armor.names #length nonzero",
				"?mod.registry.armormaterial.names #length nonzero"
			],
			"action": "print",
			"string": "Armor is not yet implemented for ${modloader} ${gameversion} and will be skipped in this build."
		},
		{
			"if": "?mod.registry.enchantment.names #length nonzero",
			"action": "print",
			"string": "Enchantments are not yet implemented for ${modloader} ${gameversion} and will be skipped in this build."
		}
	],
	"preActions": [
		{
			"action": "makedir",
			"value": "src/main/java/${mod.packagedir}/block"
		},
		{
			"action": "makedir",
			"value": "src/main/java/${mod.packagedir}/item"
		},
		{
			"action": "makedir",
			"value": "src/main/resources/META-INF"
		},
		{
			"iterate": "mod.registry.block.names",
			"action": "execactions",
			"actions": [
				{
					"action": "if",
					"condition": "?mod.block.${%v}.BlockClass #contains ModStairBlock",
					"actions": [
						{
							"action": "setdictkey",
							"key": "mod.block.${%v}.BlockClass",
							"value": "StairBlock"
						}
					]
				},
				{
					"action": "if",
					"condition": "?mod.block.${%v}.BlockClass #contains ModDoorBlock",
					"actions": [
						{
							"action": "setdictkey",
							"key": "mod.block.${%v}.BlockClass",
							"value": "DoorBlock"
						}
					]
				},
				{
					"action": "if",
					"condition": "?mod.block.${%v}.BlockClass #contains ModTrapdoorBlock",
					"actions": [
						{
							"action": "setdictkey",
							"key": "mod.block.${%v}.BlockClass",
							"value": "TrapdoorBlock"
						}
					]
				}
			]
		},
		{
			"action": "makedir",
			"value": "src/main/resources/data/minecraft"
		},
		{
			"action": "makedir",
			"value": "src/main/resources/data/minecraft/tags"
		},
		{
			"action": "makedir",
			"value": "src/main/resources/data/minecraft/tags/blocks"
		},
		{
			"action": "makedir",
			"value": "src/main/resources/data/minecraft/tags/blocks/mineable"
		},
		{
			"action": "execactions",
			"file": "${source_path}/common/actions/block_mining_requirements.json"
		}
	],
	"postActions": [
		{
			"action": "copy",
			"source": "${build_path}/src/main/resources/assets/${mod.mcpath}/textures/items/${mod.iconItem}.png",
			"dest": "${build_path}/src/main/resources/assets/${mod.mcpath}/icon.png"
		}
	],
	"sources": [
		{
			"source": "resources/pack.mcmeta",
			"dest": "src/main/resources/pack.mcmeta"
		},
		{
			"source": "resources/META-INF/mods.toml",
			"dest": "src/main/resources/META-INF/mods.toml"
		},
		{
			"source": "resources/pack.mcmeta",
			"dest": "src/main/resources/pack.mcmeta"
		},
		{
			"source": "java/MainClass.m3ecjava",
			"dest": "src/main/java/${mod.packagedir}/${mod.class}.java"
		},
		{
			"source": "java/block/ModBlocks.m3ecjava",
			"dest": "src/main/java/${mod.packagedir}/block/ModBlocks.java"
		},
		{
			"source": "java/item/ModItems.m3ecjava",
			"dest": "src/main/java/${mod.packagedir}/item/ModItems.java"
		},
		{
			"source": "java/item/ModFoods.m3ecjava",
			"dest": "src/main/java/${mod.packagedir}/item/ModFoods.java"
		},
		{
			"source": "java/item/ModTiers.m3ecjava",
			"dest": "src/main/java/${mod.packagedir}/item/ModTiers.java"
		},
		{
			"source": "java/item/ModCreativeModeTab.m3ecjava",
			"dest": "src/main/java/${mod.packagedir}/item/ModCreativeModeTab.java"
		}
	]
	
}
